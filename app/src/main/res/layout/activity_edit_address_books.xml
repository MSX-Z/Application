<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="#e8eaf6"
    tools:context=".EditAddressBooksActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_top_toolbar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@null"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Books"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can check or change your address."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/edit_phone"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change phone number"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:drawablePadding="5dp"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@drawable/ic_phone_black_18dp"/>

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="081-2345678"
                        android:textSize="18dp"
                        android:textColor="@color/colorGay"
                        android:textAlignment="center"
                        android:drawablePadding="5dp"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/ic_arrow_right_18"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/edit_email"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change email"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:drawablePadding="5dp"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@drawable/ic_mail_black_18dp"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="example@gmail.com"
                        android:textSize="18dp"
                        android:textColor="@color/colorGay"
                        android:textAlignment="center"
                        android:drawablePadding="5dp"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/ic_arrow_right_18"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/edit_gender"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="18dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:drawablePadding="5dp"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@drawable/ic_gender_18"/>

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="18dp"
                        android:textColor="@color/colorGay"
                        android:textAlignment="center"
                        android:drawablePadding="5dp"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/ic_arrow_right_18"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>